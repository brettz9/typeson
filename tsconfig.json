{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["typeson.js", "utils/**/*.js", "test/**/*.js", ".eslintrc.cjs", "test/index.html", "README.md", "rollup.config.js"],
  "exclude": ["node_modules", "rollup.config.js", "test/chaiESMLoader.js"]
}
