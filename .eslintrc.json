{
  "extends": "standard",
  "plugins": ["compat"],
  "parserOptions": {
      "sourceType": "module"
  },
  "settings": {
      "polyfills": [
          "Array.from",
          "Array.isArray",
          "console",
          "document.body",
          "Error",
          "JSON",
          "Object.defineProperty",
          "Object.entries",
          "Object.getPrototypeOf",
          "Object.keys",
          "Promise",
          "Set",
          "Symbol",
          "URL"
      ]
  },
  "rules": {
    "compat/compat": "error",
    "semi": [2, "always"],
    "indent": ["error", 4, {"outerIIFEBody": 0}],
    "object-property-newline": 0,
    "one-var": 0,
    "no-var": 2,
    "prefer-const": 2,
    "object-curly-spacing": ["error", "never"],
    "standard/computed-property-even-spacing": 0,
    "curly": ["error", "all"],
    "max-len": ["error", {"ignorePattern": "eslint-disable-line|@link|@returns"}]
  }
}
